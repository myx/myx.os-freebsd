#!/usr/bin/env bash

set -e

# It is better to be autonomous in this command, so instead of:
#   . ${0%/*}/../../include/subr.sh
#   UserRequireRoot
# we do:
$(test `id -u` = 0) || { echo 'Must be run under "root" user!'; exit 1; }

fetch http://myx.ru/distro/farm-general/myx.common/install-bsd.sh -o - | sh -e
 
PAGER=cat freebsd-update fetch install || PAGER=cat freebsd-update install || true
pkg upgrade -y || true
