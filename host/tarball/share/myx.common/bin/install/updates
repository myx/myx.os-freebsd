#!/usr/bin/env bash

set -e

# It is better to be autonomous in this command, so instead of:
#   . ${0%/*}/../../include/subr.sh
#   UserRequireRoot
# we do:
test `id -u` != 0 && echo 'ERROR: Must be root!' && exit 1

fetch https://raw.githubusercontent.com/myx/os-myx.common-freebsd/master/sh-scripts/install-myx.common-freebsd.sh -o - | sh -e
 
PAGER=cat freebsd-update fetch install || PAGER=cat freebsd-update install || true
pkg upgrade -y || true
