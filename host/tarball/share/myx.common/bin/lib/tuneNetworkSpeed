#!/bin/sh

set -e

type UserRequireRoot >/dev/null 2>&1 || \
	. "/usr/local/share/myx.common/bin/user/requireRoot"

UserRequireRoot

type ReplaceLine >/dev/null 2>&1 || \
	. "/usr/local/share/myx.common/bin/lib/replaceLine"

ReplaceLine /etc/sysctl.conf '^kern.ipc.soacceptqueue=*' 'kern.ipc.soacceptqueue=1024'
ReplaceLine /etc/sysctl.conf '^net.inet.tcp.msl=*' 'net.inet.tcp.msl=10000'
ReplaceLine /etc/sysctl.conf '^kern.maxfiles=*' 'kern.maxfiles=999999'
