#!/bin/sh

set -ex

. /usr/local/share/myx.common/include/subr-universal.sh

InstallAutorizedKey(){
	set -ex
	
	local NAME="$1"
	local KEY="$2"

	test ! -z "$NAME" || ( echo "InstallAutorizedKey: username is required!" >&2 ; exit 1 )
	test ! -z "$KEY" || ( echo "InstallAutorizedKey: key is required!" >&2 ; exit 2 )

	local HOME="/home/$NAME"
	local KEYS="$HOME/.ssh/authorized_keys"
	
	mkdir -p "$HOME/.ssh"
	touch "$KEYS"
	
	InternReplaceLine "$KEYS" "$KEY" "$KEY"
	
	chown $NAME:$NAME "$KEYS"
	chmod 600 "$KEYS"
}

case "$0" in
	*/myx.common/bin/lib/installAutorizedKey) 
		InstallAuthorizedKey "$@"
	;;
esac
